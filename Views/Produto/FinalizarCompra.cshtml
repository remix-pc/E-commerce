@using Microsoft.AspNetCore.Mvc;
@using Microsoft.AspNetCore.Http;
@{
    Layout = "_Layout";

}

@if (Context.Session.GetString("cliente") != null)
{

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/finalizarcompra.css">

    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Forma de pagamento</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="gerar()"></button>
                </div>
                <div class="conteudo_modai_qr">
                    <img src="~/img/qrcode.png" id="QR">
                    <p id="avisoQR"> Escaneie o QR Code</p>
                </div>
            </div>
        </div>
    </div>



    <div class="mae_carrinho">
        <section class="secao_finalizar1">
            <br>
            <h1 class="titulo_carrinho2">Endereço a ser entregue</h1>

            <div class="container_infor_entrega">

                <div class="container_infor_entrega_texto">
                    <div class="infor_entrega">
                        <p>Endereco: </p>
                        <p>Numero: </p>
                        <p>Bairro: </p>
                        <p>Cidade: </p>
                        <p>Estado: </p>
                    </div>

                    <div class="infor_entrega_add">
                        <p class="text_complemento" maxlength="10"> Adicione um complemento </p>
                        <input class="input_complemento" type="text" required>
                    </div>
                </div>

                <div class="area_botoes_info_entrega">
                    <button class="btn_carrinho2" onclick="pagar()"> Enviar para este endereço </button>
                    <button class="btn_carrinho2" data-bs-toggle="modal" data-bs-target="#staticBackdrop"> Mudar endereço </button>
                </div>
            </div>
        </section>

        <br>
        <h2 class="titulo_carrinho2">Formas de pagamento</h2>

        <div class="conteiner_pagamento_checkbox">

            <form id="frmCheckBox">
                <div class="linha_conteiner_pagamento_checkbox">
                    <input type="checkbox" class="pagamento_checkbox">PIX
                </div>

                <button class="btn btn-primary" id="botao_gerar" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Gerar</button>
            </form>

        </div>







        <section class="secao_finalizar2">
            <div class="efetuacao_pediodo">
                <div id="entorno_top"></div>
                <div id="entorno">
                    <h3 class="titulo_carrinho2" id="titulo_tudo_certo">Pagamento efetuado com sucesso </h3>
                </div>

                <p class="infor_final_pedido">O pedido pode demorar até XX dias para ser entregue aos correios.</p>
                <button class="btn_carrinho2" id="btn_volt_home"><a asp-controller="Home" asp-action="Index">Voltar para Home</a></button>
            </div>
        </section>

    </div>
}


else
